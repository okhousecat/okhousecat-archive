<h1>All Projects</h1>

<div class="project-grid full-list-grid">
  {% for project in collections.projects %}
    <div class="project-card">
      <a href="/projects/{{ project.slug }}/">
        {% if project.gif %}
          <img src="/assets/{{ project.category }}/{{ project.name }}/gifs/{{ project.gif }}" alt="{{ project.title }}">
        {% endif %}
        <div class="project-title">{{ project.title }}</div>
      </a>
    </div>
  {% endfor %}
</div>
